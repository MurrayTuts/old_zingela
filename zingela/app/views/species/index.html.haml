  %tbody
    - @species.each do |species|
      %tr
        %td= species.name
        %td= species.potential_biomass
        %td= species.species
        %td= species.threat_status
        %td= species.sa_endemic
        %td= species.sysnonym_of
        %td= species.common_name
        %td= species.life_cycle
        %td= species.growth_forms
        %td= species.min_hieght
        %td= species.max_height
