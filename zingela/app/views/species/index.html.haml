%h1.page-header
  Listing
  %small
    species

%table.table
  %thead
    %tr
      %th Name
      %th Species Family
      %th
      %th
      %th

  %tbody
    - @species.each do |species|
      %tr
        %td= species.name
        %td= species.species_family.name
        %td= link_to 'Show', species, class:  "btn btn-default"
        %td= link_to 'Edit', edit_species_path(species), class:  "btn btn-primary"
        %td= link_to 'Destroy', species, :method => :delete, :data => { :confirm => 'Are you sure?' }, class:  "btn btn-danger"

%br

= link_to 'New Species', new_species_path, class: "btn btn-success pull-right"
