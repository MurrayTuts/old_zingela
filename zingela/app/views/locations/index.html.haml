%h1.page-header
  Listing
  %small
    Locations
%table.table
  %thead
    %tr
      %th Name
      %th Country
      %th Province
      %th City
      %th Address 1
      %th Address 2
      %th
      %th
      %th

  %tbody
    - @locations.each do |location|
      %tr
        %td= location.name
        %td= location.country
        %td= location.province
        %td= location.city
        %td= location.address_1
        %td= location.address_2
        %td= link_to 'Show', location
        %td= link_to 'Edit', edit_location_path(location)
        %td= link_to 'Destroy', location, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Location', new_location_path
