%h1.page-header
  Listing
  %small
    Field Data
%table.table
  %thead
    %tr
      %th Date
      %th Location
      %th Project
      %th User
      %th
      %th
      %th
  %tbody
    - @field_data.each do |field_datum|
      %tr
        %td= field_datum.date
        %td= Location.find(field_datum.location_id).name
        %td= Project.find(field_datum.project_id).name
        %td= User.find(field_datum.user_id).email
        %td= link_to 'Show', field_datum, class: "btn btn-primary"
        %td= link_to 'Edit', edit_field_datum_path(field_datum), class: "btn btn-default"
        %td= link_to 'Delete', field_datum, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"
%br

= link_to 'New Field data', new_field_datum_path, class: "btn btn-success pull-right"
