%h1.page-header
  Listing
  %small
    Companies
%table.table
  %thead
    %tr
      %th Name
      %th Email
      -# %th Admin email
      %th
      %th
      %th
  %tbody
    - @companies.each do |company|
      %tr
        %td= company.company_name
        %td= company.email
        -# %td= Admin.find(company.admin_id).email
        %td
          %a.btn.btn-default{:href => "/edit/company/#{company.id}"}Edit
        %td
          %a.btn.btn-danger{:href => "/delete/company/#{company.id}"}Delete
%br
= link_to 'New Company', new_company_registration_path, class:"btn btn-success pull-right"
