.panel.panel-primary.create
  .panel-heading
    %h2
      Edit
      =@company.company_name
  = form_for(@company, url: "/update/company/#{@company.id}") do |f|
    .panel-body
      .field
        = f.label :company_name
        %br/
        = f.text_field :company_name, autofocus: true, class: "form-control max-200"
      .field
        = f.label :email
        %br/
        = f.email_field :email, class: "form-control max-200"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", class: "form-control max-200"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control max-200"
    .panel-footer
      = f.submit "Update", class: "btn btn-primary pull-right"
