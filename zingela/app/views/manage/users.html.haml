%h1 Users
%table.table
  %thead
    %tr
      %th Email
      %th Company
      %th
      %th
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= Company.find(user.company_id).company_name
        %td= link_to 'Edit', edit_user_registration_path(user), class:"btn btn-default"
        %td= link_to 'Destroy', user_registration_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }, class:"btn btn-danger"
%br
= link_to 'New user', new_user_registration_path, class:"btn btn-success pull-right"
