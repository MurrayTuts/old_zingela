.panel.panel-primary.create
  .panel-heading
    %h2
      Create new
      =resource_name

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .panel-body
      = devise_error_messages!
      -if resource_name == "company"
        .field
          = f.label :company_name
          %br/
          = f.text_field :company_name, autofocus: true, class: "form-control max-200"
      .field
        = f.label :email
        %br/
        = f.email_field :email, class: "form-control max-200"
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", class: "form-control max-200"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control max-200"
    .panel-footer
      = f.submit "Create", class: "btn btn-primary pull-right"
