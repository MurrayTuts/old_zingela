= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :expected_delivery_date
    = f.date_select :expected_delivery_date
  .field
    = f.label :actual_delivery_date
    = f.date_select :actual_delivery_date
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :date_changed
    = f.date_select :date_changed
  .actions
    = f.submit 'Save'
